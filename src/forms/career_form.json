[
    {
      "element": "config",
      "formname": "Careers",
      "error_text": "Highlighted fields are required",
      "success_text": "Thank you for your interest. A member of our team will contact you shortly.",
      "email_temp_user": "careers_user",
      "email_temp_admin": "careers_admin",
      "email_subject_user": "Careers",
      "email_subject_admin": "Careers",
      "email_server_func": "getstarted",
      "event_tracking": "Careers - Apply for job",
      "page_url": "/careers"
    },
    {
      "grpmd": "12",
      "label": "Name*",
      "placeholder": "Your name",
      "name": "name",
      "type": "text",
      "element": "input",
      "required": true,
      "patternchk": "^[-a-zA-Z0-9-()]+(\\s+[-a-zA-Z0-9-()]+)*$",
      "labelClass": "content_b-18",
      "className": "theme-form-group"
    },
    {
      "grpmd": "12",
      "label": "Email Address*",
      "placeholder": "Enter Email Address",
      "name": "email",
      "type": "email",
      "element": "input",
      "required": true,
      "patternchk": "[a-zA-Z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$",
      "labelClass": "content_b-18",
      "className": "theme-form-group"
    },
    {
      "grpmd": "12",
      "label": "Telephone Number*",
      "placeholder": "Enter Telephone Number",
      "name": "telephone",
      "type": "text",
      "element": "input",
      "required": true,
      "patternchk": "^[+]*[0-9-()]+(\\s+[0-9-()]+)*.{9}$",
      "labelClass": "content_b-18",
      "className": "theme-form-group"
    },
    {
      "grpmd": "col-md-12",
      "label": "Upload your CV",
      "placeholder": "Click to attach you CV",
      "name": "file",
      "type": "file",
      "element": "file",
      "required": true,
      "accept": ".pdf,.doc",
      "fieldClass": "form-control d-flex flex-column justify-content-center form-control-browsefile custom custom-file",
      "labelClass": "content_b-18",
      "className": "theme-form-group"
    },
    {
      "type": "hidden",
      "element": "input",
      "name": "cvname"
    },
    {
      "grpmd": "12",
      "label": "Message",
      "placeholder": "Write your message here...",
      "name": "message",
      "element": "textarea",
      "class": "form-text-area ",
      "rows": 5,
      "required": false,
      "labelClass": "content_b-18",
      "className": "theme-form-group"
    },
    {
      "name": "Submit Details",
      "type": "submit",
      "element": "button",
      "value": "submit",
      "step": "col-md-12 text-center",
      "class": "button button-primary btn",
      "formclass": "",
      "className": "theme-form-group"
    },
    {
      "step": "col-md-12",
      "text": "By clicking Send Message, you agree to our <a href='/terms-and-condition/'>Terms & Conditions</a>  and  <a href='/privacy-policy/'> Privacy Policy </a>.",
      "element": "html",
      "class": "enquiry-term-text text-center"
    },
    {
      "element": "captcha",
      "class": "py-2 captcha-class"
    }
]